{
  "package": {
    "productName": "PaddleOCR Desktop",
    "version": "1.0.0"
  },
  "tauri": {
    "bundle": {
      "active": true,
      "identifier": "com.paddleocr.app",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "externalBin": [
        "binaries/paddleocr_backend"
      ],
      "resources": [
        "models"
      ],
      "category": "Productivity",
      "shortDescription": "",
      "longDescription": "",
      "targets": "all"
    },
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true,
        "sidecar": true,
        "scope": [
          {
            "name": "paddleocr_backend",
            "sidecar": true
          }
        ]
      },
      "http": {
        "all": false,
        "request": true,
        "scope": [
          "http://**",
          "https://**"
        ]
      },
      "window": {
        "all": false,
        "close": true
      }
    },
    "windows": [
      {
        "title": "PaddleOCR Desktop",
        "width": 1400,
        "height": 900,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "build": {
    "distDir": "../dist",
    "devPath": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  }
}